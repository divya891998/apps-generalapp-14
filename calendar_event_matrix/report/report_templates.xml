<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="report_calendar_event_matrix">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <t t-foreach="docs" t-as="o">
                    <table class="table">
                        <thead>
                            <tr>
                                <th t-field="o.name"/>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-set="columns" t-value="int(len(o.event_ids) / len(o.row_ids))"/>
                            <t t-set="col" t-value="1"/>
                            <t t-foreach="o.event_ids.sorted(key=lambda r: [r.matrix_row_id.sequence, r.start_date_str])" t-as="ce">
                                <t t-if="col == 1">
                                    &lt;tr&gt;
                                </t>
                                <td>
                                <p t-field="ce.start_date_str"/>
                                <p t-field="ce.name"/>
                                </td>
                                <t t-if="col == columns">
                                    &lt;&#47;tr&gt;
                                </t>                                
                                <t t-set="col" t-value="col+1"/>
                            </t>
                        </tbody>
                    </table>
                </t>
            </t>
        </t>
    </template>
</odoo>