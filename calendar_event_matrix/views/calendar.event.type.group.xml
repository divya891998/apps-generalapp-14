<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_calendar_event_type_group_tree" model="ir.ui.view">
        <field name="name">calendar.event.type.group tree</field>
        <field name="model">calendar.event.type.group</field>
        <field name="type">tree</field>
        <field name="priority" eval="16"/>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="view_calendar_event_type_group_form" model="ir.ui.view">
        <field name="name">calendar.event.type.group form</field>
        <field name="model">calendar.event.type.group</field>
        <field name="type">form</field>
        <field name="priority" eval="16"/>
        <field name="arch" type="xml">
            <form>
                <div class="oe_edit_only">
                    <label for="name"/>
                </div>
                <h1>
                    <field name="name"/>
                </h1>
                <field name="date"/>
                <button name="add_date" type="object" string="Add date"/>
                <button name="remove_date" type="object" string="Remove date"/>
                <button name="show_from_date" type="object" string="Show from date"/>
                <button name="reload" type="object" string="Reload"/>
                <field name="line_ids" widget="x2many_2d_matrix"
                       field_x_axis="start_date_str" field_y_axis="categ_id" field_value="partner_ids">
                    <tree default_order="start_date_str">
                        <field name="start_date_str"/>
                        <field name="categ_id" widget="many2many_tags"/>
                        <field name="partner_ids" widget="many2many_tags"/>
                    </tree>
                </field>
            </form>
        </field>
    </record>

    <record id="action_calendar_event_type_group" model="ir.actions.act_window">
        <field name="name">Meeting Type Groups</field>
        <field name="res_model">calendar.event.type.group</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
          <p class="o_view_nocontent_smiling_face">
            Schedule contacts for responsibilities
          </p><p>
            ...
          </p>
        </field>
    </record>

    <menuitem
    id="menu_calendar_event_type_group"
    name="Meeting Type Groups"
    parent="calendar.menu_calendar_configuration"
    action="action_calendar_event_type_group"/>

</odoo>