<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <record model="ir.ui.view" id="view_custom_list_tree">
            <field name="name">custom.list.tree</field>
            <field name="model">custom.list</field>
            <field name="priority" eval="20"/>
            <field name="arch" type="xml">
                <tree editable="top">
                    <field name="name"/>
                    <field name="type"/>
                    <field name="id"/>
                </tree>
            </field>
        </record>
        <record id="action_custom_list" model="ir.actions.act_window">
            <field name="name">Custom List</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">custom.list</field>
            <field name="view_mode">tree</field>
        </record>
        <menuitem id="menu_custom_list"
                  name="Custom Lists"
                  sequence="21"
                  parent="base.next_id_2"
                  action="action_custom_list"
                  />

    </data>
</odoo>