<?xml version="1.0"?>
<odoo>
    <data>
        <template id="report_event_attendees">   
            <t t-call="web.html_container">
                <div class="header" style="border-bottom: 1px solid black;">
                    <h3 class="text-center">
                    Attendees for <span t-field="docs[0].name"/> (<span t-esc="res_company['name']"/>)
                    </h3>
                </div>
                <div class="article mt0 o_report_layout_standard">
                    <table class="table table-condensed table-bordered">
                        <thead>
                            <th>Ticket</th>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Phone</th>
                        </thead>
                        <tbody>
                            <t t-foreach="docs[0].registration_ids.sorted(key=lambda a: (a.event_ticket_id.name, a.name))" t-as="attendee">
                                <tr>
                                    <td><span t-esc="attendee.event_ticket_id.name"/></td>
                                    <td><span t-esc="attendee.name"/></td>
                                    <td><span t-esc="attendee.email"/></td>
                                    <td><span t-esc="attendee.phone"/></td>
                                </tr>
                            </t>
                        </tbody>
                    </table>
                </div>
            </t>
        </template>

        <report
        id="action_report_event_attendees"
        string="Event Attendees"
        model="event.event"
        report_type="qweb-pdf"
        name="event_registration_name_email_phone.report_event_attendees"
        file="event_registration_name_email_phone.report_event_attendees"
        />

    </data>
</odoo>