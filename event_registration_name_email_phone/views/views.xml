<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- event.event -->

		<record model="ir.ui.view" id="view_event_form_require_email_phone">
    		<field name="name">Require email or phone</field>
    		<field name="model">event.event</field>
            <field name="inherit_id" ref="event.view_event_form"/>
    		<field name="priority" eval="20"/>
    		<field name="groups_id" eval="[(4, ref('base.group_user'))]"/>
			<field name="arch" type="xml">
				<data>
                    <field name="auto_confirm" position="after">
                        <field name="require_email"/>
                        <field name="require_phone"/>
                    </field>
				</data>
    		</field>
		</record>

        <!-- res.company -->

		<record model="ir.ui.view" id="view_company_form_event_registration">
    		<field name="name">Prefill attendees</field>
    		<field name="model">res.company</field>
            <field name="inherit_id" ref="base.view_company_form"/>
    		<field name="priority" eval="20"/>
    		<field name="groups_id" eval="[(4, ref('base.group_user'))]"/>
			<field name="arch" type="xml">
				<data>
                    <field name="sequence" position="after">
                        <field name="event_registration_default_values"/>
                    </field>
				</data>
    		</field>
		</record>

        <!-- qweb -->

        <template id="registration_attendee_details" inherit_id="website_event.registration_attendee_details">
            <data>
                <xpath expr="//t[@t-foreach='tickets']/div[@class='row']" position="replace">
                    <div class="row">
                        <div class="col-lg-4"><strong>Name</strong></div>
                        <div class="col-lg-5"><strong>Email</strong>
                            <t t-if="not event.require_email">
                                <span class="text-muted">(Optional)</span>
                            </t>                     
                        </div>
                        <div class="col-lg-3"><strong>Phone</strong>
                            <t t-if="not event.require_phone">
                                <span class="text-muted">(Optional)</span>
                            </t> 
                        </div>
                    </div>
                </xpath>
                <xpath expr="//t[@t-foreach='tickets']/t/div[@class='row mb4']" position="replace">
                    <div class="row mb4">
                        <t t-set="attendee_placeholder">Attendee #%s</t>
                        <t t-set="default" t-value="request.env.user.company_id.event_registration_default_values"/>
                        <t t-if="default" t-set="name" t-value="request.env.user.name"/><t t-else="" t-set="name" t-value=""/>
                        <t t-if="default" t-set="email" t-value="request.env.user.email"/><t t-else="" t-set="email" t-value=""/>
                        <t t-if="default" t-set="phone" t-value="request.env.user.phone"/><t t-else="" t-set="phone" t-value=""/>
                        <div class="col-lg-4"><input class="form-control" type="text" t-attf-name="#{counter}-name" t-att-value="name" required="This field is required" t-att-placeholder="attendee_placeholder %counter"/></div>
                        <div class="col-lg-5">
                            <input t-if="event.require_email" class="form-control" type="email" t-attf-name="#{counter}-email" t-att-value="email" required="This field is required"/>
                            <input t-else=""                  class="form-control" type="email" t-attf-name="#{counter}-email" t-att-value="email"/>
                        </div>
                        <div class="col-lg-3">
                            <input t-if="event.require_phone" class="form-control" type="tel" t-attf-name="#{counter}-phone" t-att-value="phone" required="This field is required"/>
                            <input t-else=""                  class="form-control" type="tel" t-attf-name="#{counter}-phone" t-att-value="phone"/>
                        </div>
                        <input class="d-none" type="text" t-attf-name="#{counter}-ticket_id" t-attf-value="#{ticket['id']}"/>
                    </div>
                </xpath>
            </data>
        </template>

    </data>
</odoo>
